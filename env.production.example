APP_NAME="Shendam Local Government Area"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Configuration (Production)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=shendam_lga_production
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

# Cache Configuration (Production - Use Redis or Memcached)
CACHE_STORE=redis
CACHE_PREFIX=shendam_lga_

# Queue Configuration (Production - Use Redis or Database)
QUEUE_CONNECTION=redis

# Broadcasting Configuration
BROADCAST_CONNECTION=log

# Filesystem Configuration (Production - Use S3 or local)
FILESYSTEM_DISK=local
# FILESYSTEM_DISK=s3  # Uncomment if using S3

# Mail Configuration (Production)
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (For S3 storage - Recommended for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=shendam-lga-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Redis Configuration (Production)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# Logging Configuration (Production)
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=yourdomain.com
SESSION_DOMAIN=.yourdomain.com

# Application Specific
CONTACT_EMAIL=contact@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Server Configuration
DEPLOY_PATH=/var/www/shendam-lga
DEPLOY_USER=www-data
DEPLOY_BRANCH=main
